.open {
  background: none !important;
  color: #000 !important;
}

.open::after {
  border: none;
}

.open-img {
  width: 50px;
  height: 50px;
}

.open-word {
  font-size: 13px;
}

.userinfo-nickname {
  color: #fff;
}

.g-bda-userinfo {
  padding-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tolistbtn {
  display: flex;
  flex-direction: column;
}

.btns {
  padding-top:10rpx;
}
.btnlabel {
  margin-top: 5px;
  color: whitesmoke;
  font-size: 14px;
}

.btndata {
  color: white;

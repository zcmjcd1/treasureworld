<!--pages/detail/detail.wxml-->
<text>pages/detail/detail.wxml</text>
<view class="center">
  <image src="{{treasurebox.imgsrc}}" bindtap="preview" mode="aspectFill" class="swiper-image" width="{{img_width}}" height="{{img_height}}" />
</view>
<view class="view_description">
  <view class="title">{{treasurebox.title}}</view>
  <text class="description">{{treasurebox.description}}</text>
</view>
<view class="view_publisher">
  <image id="publisher_avatar" src="{{treasurebox.user_avatar}}"></image>
  <view id="publisher">{{treasurebox.user_nickname}}</view>
</view>
<view class="center">
  <view bindtap="openLocation" id="openLocation">
    <image id="img_openlocation" src="/images/ic_map.png"></image>
    <text style="vertical-align: middle">查看位置</text>
  </view>
</view>
<view class="center">
  <text style="vertical-align: middle">开启宝箱</text>
  <text style="vertical-align: middle">等待宝箱抽奖</text>
</view>
<view class="center">
  <text style="vertical-align: middle">参与人数{{joinnum}}</text>
</view>
